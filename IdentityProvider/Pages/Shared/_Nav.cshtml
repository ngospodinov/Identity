@using Duende.IdentityServer.Extensions
@{
    string? name = null;
    if (!true.Equals(ViewData["signed-out"]))
    {
        name = Context.User?.GetDisplayName();
    }
}
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap4-glyphicons/css/bootstrap-glyphicons.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<header class="sticky-top">
    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm"
         style="background: linear-gradient(180deg, #0b0f14 0%, #121821 100%);">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="https://localhost:5000/">
                <i class="bi bi-shield-lock me-2"></i> IdentityProvider
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#idpNav"
                    aria-controls="idpNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="idpNav" class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    @if (!string.IsNullOrWhiteSpace(name))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#"
                               id="accountDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-1"></i> @name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark shadow"
                                aria-labelledby="accountDropdown">
                                <li>
                                    <a class="dropdown-item" asp-page="/Account/Manage/Index">
                                        <i class="bi bi-gear me-1"></i> Manage account
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-page="/Account/Logout/Index">
                                        <i class="bi bi-box-arrow-right me-1"></i> Logout
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <a class="dropdown-item text-danger" asp-page="/Account/Delete/Index">
                                        <i class="bi bi-trash me-1"></i> Delete my account
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>
