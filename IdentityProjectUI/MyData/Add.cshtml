@model IdentityProjectUI.Models.DataItemDto

<!DOCTYPE html>

<html>
<head>
    <title>Add Data items</title>
</head>
<body>
<h1>Add Data item</h1>
<form method="post" asp-action="Add">
    <div class="mt-3">
        <label class="form-label">Key</label>
        <input type="text" class="form-control" required="" asp-for="Key"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Value</label>
        <input type="text" class="form-control" asp-for="Value"/>
    </div>
    
    <div class="mt-3">
        <label class="form-label">Category</label>
        <select class="form-select" asp-for="Category">
            <option value="Public" selected>Public</option>
            <option value="Academic">Academic</option>
            <option value="Financial">Financial</option>
            <option value="Legal">Legal</option>
        </select>
    </div>
    
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

</body>
</html>