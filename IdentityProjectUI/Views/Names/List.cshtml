@model PagedResult<NameDto>
@{
    ViewData["Title"] = "My Defined Names";
}

<section class="container py-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h1 class="h4 mb-1">My Defined Names</h1>
            <p class="text-muted mb-0">Manage your saved names and category defaults.</p>
        </div>
        <div class="d-flex gap-1">
            @await Html.PartialAsync("_PageSizeSelector", new PagerModel {
                BasePath = "/Names/List",
                PageSize = Model.PageSize,
                ItemsLabel = "Items",
            })
            <a class="btn btn-secondary" href="/Names/Add">Add new entry</a>
        </div>
    </div>

    @if (Model.Items is { Count: > 0 })
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                <tr>
                    <th class="text-muted small">Id</th>
                    <th>First name</th>
                    <th>Middle name</th>
                    <th>Last name</th>
                    <th>Category</th>
                    <th>Default?</th>
                    <th class="text-end">Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var name in Model.Items)
                {
                    <tr>
                        <td class="text-muted small">@name.Id</td>
                        <td>@name.FirstName</td>
                        <td>@(string.IsNullOrWhiteSpace(name.MiddleName) ? "-" : name.MiddleName)</td>
                        <td>@name.LastName</td>
                        <td>
                            <span class="badge bg-secondary">@name.Category</span>
                        </td>
                        <td>
                            @if (name.IsDefaultForCategory)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary border">No</span>
                            }
                        </td>
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                <a class="btn btn-sm btn-outline-primary" href="/Names/Edit/@name.Id">Edit</a>
                                <form action="/Names/Delete/@name.Id" method="post" class="ms-1" onsubmit="return confirm('Delete this name entry?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>

        <div class="d-flex align-items-center justify-content-between mt-3">
            @await Html.PartialAsync("_Pager", new PagerModel {
                BasePath = "/Names/List",
                PageNumber = Model.PageNumber,
                PageSize = Model.PageSize,
                TotalCount = Model.TotalCount
            })
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <h2 class="h5 mb-2">No names yet</h2>
                <p class="text-muted mb-4">Add your first name entry to get started.</p>
                <a class="btn btn-primary" href="/Names/Add">Add new entry</a>
            </div>
        </div>
    }
</section>
