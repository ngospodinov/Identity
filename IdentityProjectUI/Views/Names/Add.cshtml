@model IdentityProjectUI.Models.NameRowModel
@{
}

<!DOCTYPE html>

<html lang="en">
<head>
    <title>Add Names</title>
</head>
<body>
<h1>Add Names</h1>
<form method="post" asp-action="Add">
    <div class="mt-3">
        <label class="form-label">First name</label>
        <input type="text" class="form-control" required asp-for="FirstName"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Middle name</label>
        <input type="text" class="form-control" asp-for="MiddleName"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Last name</label>
        <input type="text" class="form-control" asp-for="LastName"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Category</label>
        <select class="form-select" asp-for="Category">
            <option value="Public" selected>Public</option>
            <option value="Academic">Academic</option>
            <option value="Financial">Financial</option>
            <option value="Legal">Legal</option>
        </select>
    </div>

    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="IsDefault" asp-for="IsDefaultForCategory"/>
        <label class="form-check-label" for="IsDefault">Is default for category?</label>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

</body>
</html>
