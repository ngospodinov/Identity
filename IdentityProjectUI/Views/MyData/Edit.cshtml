@model IdentityProjectUI.Models.DataItemDto

<!DOCTYPE html>

<html>
    <head>
        <title>Edit Data items</title>
    </head>
<body>
<h1>Edit Data item</h1>
@if (Model is null)
{
    <p>No data item was found with the provided Id.</p>
}
else
{
    <form method="post" asp-action="Edit">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly/>
        </div>

        <div class="mt-3">
            <label class="form-label">Key</label>
            <input type="text" class="form-control" required="" asp-for="Key"/>
        </div>

        <div class="mt-3">
            <label class="form-label">Value</label>
            <input type="text" class="form-control" asp-for="Value"/>
        </div>

        <div class="mt-3">
            <label class="form-label">Category</label>
            <select class="form-select" asp-for="Category">
                <option value="Public" selected>Public</option>
                <option value="Academic">Academic</option>
                <option value="Financial">Financial</option>
                <option value="Legal">Legal</option>
            </select>
        </div>
        
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
}

</body>
</html>