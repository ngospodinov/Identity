<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - IdentityProjectUI</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/IdentityProjectUI.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <meta name="theme-color" content="#0b0f14" />
</head>
<body>
@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    bool IsActive(string ctrl, string? act = null) =>
        string.Equals(currentController, ctrl, StringComparison.OrdinalIgnoreCase) &&
        (act is null || string.Equals(currentAction, act, StringComparison.OrdinalIgnoreCase));
}
<header class="sticky-top">
    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-shield-lock me-2"></i> IdentityProjectUI
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                    aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="mainNav" class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link @(IsActive("Home","Index") ? "active" : "")"
                           asp-controller="Home" asp-action="Index">
                            <i class="bi bi-grid-1x2"></i> Dashboard
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(IsActive("Names") ? "active" : "")"
                           asp-controller="Names" asp-action="List">
                            <i class="bi bi-person-badge"></i> My Names
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(IsActive("MyData") ? "active" : "")"
                           asp-controller="MyData" asp-action="List">
                            <i class="bi bi-collection"></i> My Data
                        </a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle @(IsActive("AccessRequests") || IsActive("RequestAccess") || IsActive("AccessGrants") || IsActive("Data") ? "active" : "")"
                           href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-shield-check"></i> Permissions
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark shadow">
                            <li>
                                <a class="dropdown-item @(IsActive("AccessRequests") ? "active" : "")"
                                   asp-controller="AccessRequests" asp-action="List">
                                    <i class="bi bi-inboxes me-1"></i> Access requests (to me)
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item @(IsActive("RequestAccess") ? "active" : "")"
                                   asp-controller="RequestAccess" asp-action="List">
                                    <i class="bi bi-person-plus me-1"></i> Request access (to others)
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item @(IsActive("AccessGrants") ? "active" : "")"
                                   asp-controller="AccessGrants" asp-action="List">
                                    <i class="bi bi-journal-check me-1"></i> My access grants
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item @(IsActive("Data") ? "active" : "")"
                                   asp-controller="Data" asp-action="List">
                                    <i class="bi bi-people me-1"></i> View data (granted to me)
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item d-lg-none">
                        <a class="nav-link @(IsActive("Home","Privacy") ? "active" : "")"
                           asp-controller="Home" asp-action="Privacy">
                            <i class="bi bi-shield-lock-fill"></i> Privacy
                        </a>
                    </li>
                </ul>

                <div class="d-flex align-items-center gap-2">
                    <a href="https://localhost:5001/Account/Manage" class="btn btn-outline-light btn-sm btn-manage bg-white">
                        <i class="bi bi-gear"></i> Manage Account
                    </a>
                    @await Html.PartialAsync("_Login")
                </div>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - IdentityProjectUI -
        <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
